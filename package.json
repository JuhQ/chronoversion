{
  "name": "chronoversion",
  "version": "2025.1.2",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc --outDir dist",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "bump-version": "node bump-version.js",
    "release": "npm run lint && npm run build && npm run test && npm run bump-version",
    "postrelease": "git add package.json && git commit -m \"chore: bump version\" && git push && git push --tags",
    "lint": "npx @biomejs/biome check ./src",
    "lint:fix": "npm run lint -- --write"
  },
  "keywords": [
    "chronoversion",
    "version",
    "semver",
    "semver version",
    "versioning",
    "versioning tool"
  ],
  "author": "",
  "license": "MIT",
  "description": "A tool to manage versions based on semver",
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.5",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  }
}